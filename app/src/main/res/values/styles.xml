<resources>

    <!-- Base application theme. -->
    <!-- migrate to material design Theme.AppCompat.Light.DarkActionBar ->  android:Theme.Material-->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->

        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="windowNoTitle">true</item>-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!--<item name="windowNoTitle">true</item>-->
        <!--<item name="windowActionBar">false</item>-->

        <item name="colorPrimary">@color/colorCloud</item>
        <item name="colorPrimaryDark">@color/colorCloud</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->


        <!-- reference the card view -->
        <item name="cardViewStyle">@style/CardView</item>
    </style>

    <style name="WeatherText">
        <item name="android:textColor">@color/colorConcrete</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="cityBusEditTextStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/cardview_light_background</item>
        <item name="colorControlNormal">@color/colorSilver</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:cursorVisible">true</item>
    </style>

    <style name="AppTheme.ToolBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorCloud</item>
        <item name="android:textColorPrimary">@color/colorCloud</item>
    </style>

    <!--定义ToolBar上Title的文字样式-->
    <style name="AppTheme.ToolbarTitleTextStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorWetasphalt</item>
    </style>

    <style name="Base.TextAppearance.AppCompat.Widget.ActionBar.Title" parent="TextAppearance.AppCompat.Title">

        <item name="android:textColor">@color/colorCloud</item>
    </style>

</resources>
