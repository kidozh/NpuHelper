<resources>

    <!-- Base application theme. -->
    <!-- migrate to material design Theme.AppCompat.Light.DarkActionBar ->  android:Theme.Material-->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->


<!--        <item name="android:windowDrawsSystemBarBackgrounds">true</item>-->


        <item name="colorPrimary">@color/colorPureWhite</item>
        <item name="colorPrimaryDark">@color/colorPureWhite</item>
        <item name="colorAccent">@color/colorBelizahole</item>

<!--        <item name="colorTextDefault">@color/colorPureBlack</item>-->

        <item name="android:actionBarStyle">@style/darkActionBar</item>
        <item name="android:statusBarColor">@color/colorPureWhite</item>
        <item name="android:windowLightStatusBar">true</item>
<!--        <item name="android:textColorPrimary">@color/colorTextDefault</item>-->



        <item name="android:navigationBarColor">@color/colorSilver</item>
        <item name="colorControlActivated">@color/colorBelizahole</item>
        <item name="colorControlNormal">@color/colorPeterRiver</item>



        <!-- reference the card view -->
        <item name="cardViewStyle">@style/CardView</item>

        <item name="alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert.Self</item>


    </style>

    <style name="Theme.AppCompat.Light.Dialog.Alert.Self"
        parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <!--修改AlertDialog按钮的颜色-->
        <item name="colorAccent">@color/colorBelizahole</item>
    </style>

    <style name="ButtonAppStyle" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:background">@color/colorBelizahole</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="android:colorButtonNormal">@color/colorBelizahole</item>

    </style>

    <style name="darkActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/darkActionBarTitle</item>
    </style>

    <style name="darkActionBarTitle">
        <item name="android:textColor">@color/colorPureWhite</item>
    </style>

    <style name="NPUAppTheme" parent="@style/AppTheme">
        <item name="colorPrimary">@color/colorPureWhite</item>
        <item name="colorPrimaryDark">@color/colorPureWhite</item>

        <item name="colorAccent">@color/colorBelizahole</item>
<!--        <item name="windowActionBar">false</item>-->
<!--        <item name="windowNoTitle">true</item>-->
<!--        <item name="android:windowTranslucentStatus">true</item>-->
<!--        <item name="android:windowTranslucentNavigation">true</item>-->
    </style>

    <style name="WeatherText">
        <item name="android:textColor">@color/colorConcrete</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="Theme.MaterialComponents.DayNight">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>


    <style name="cityBusEditTextStyle" parent="@style/AppTheme">
        <item name="colorControlActivated">@color/colorPureWhite</item>
        <item name="colorControlNormal">@color/colorSilver</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:cursorVisible">true</item>
    </style>

    <style name="AppTheme.ToolBar" parent="@style/AppTheme">
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="android:textColor">@color/colorCloud</item>
        <item name="android:textColorPrimary">@color/colorCloud</item>
    </style>

    <style name="AppTheme.SettingActivity" parent="@style/AppTheme">
        <item name="colorPrimary">@color/colorPureWhite</item>
        <item name="colorPrimaryDark">@color/colorPureWhite</item>
        <item name="colorAccent">@color/colorBelizahole</item>
        <item name="android:textColor">@color/colorPureBlack</item>
        <item name="android:textColorPrimary">@color/colorPureBlack</item>
    </style>

    <!--定义ToolBar上Title的文字样式-->
    <style name="AppTheme.ToolbarTitleTextStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorWetasphalt</item>
    </style>

    <style name="Base.TextAppearance.AppCompat.Widget.ActionBar.Title" parent="TextAppearance.AppCompat.Title">

        <item name="android:textColor">@color/colorCloud</item>
    </style>

    <style name="toolbar_blue_theme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/colorPureWhite</item>
    </style>

    <style name="toolbar_dark_theme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/colorPureWhite</item>
    </style>

    <style name="toolbar_light_theme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/colorWetasphalt</item>
    </style>

    <style name="toolbar_pure_white_theme" parent="@style/toolbar_light_theme">
        <item name="android:background">@color/colorPureWhite</item>
    </style>

    <style name="book_chip_dark_style" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_select_state</item>
        <item name="chipStrokeColor">@color/colorPeterRiver</item>
        <item name="android:textColor">@color/chip_text_color_select_state</item>
        <!--<item name="android:textColorHighlight">@color/colorCloud</item>-->
        <!--<item name="chipSurfaceColor">@color/colorPeterRiver</item>-->
        <item name="android:shadowColor">@color/colorBelizahole</item>
        <item name="rippleColor">@color/colorBelizahole</item>
        <item name="chipIconVisible">true</item>
    </style>


    <style name="book_option_switch" parent="Theme.MaterialComponents.DayNight">
        <!-- Active thumb color & Active track color(30% transparency)
            switch 打开时的拇指按钮的颜色 轨迹颜色默认为30%这个颜色 -->
        <item name="colorControlActivated">@color/colorBelizahole</item>
        <!-- Inactive thumb color switch关闭时的拇指按钮的颜色 -->
        <item name="colorSwitchThumbNormal">@color/colorAsbestos</item>
        <!-- Inactive track color(30% transparency) switch关闭时的轨迹的颜色  30%这个颜色 -->
        <item name="android:colorForeground">@color/colorSilver</item>
        <!--使用方法：
        在布局文件中给需要自定义控件中增加app:theme="@style/MySwitch"-->
    </style>

</resources>
